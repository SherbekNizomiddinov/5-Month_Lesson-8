    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Machine details sahifasiga o'tish funksiyasi
        function showMachineDetails(machineId) {
            // Bu yerda haqiqiy loyihada window.location orqali boshqa sahifaga o'tishingiz mumkin
            // Masalan: window.location.href = `/machine-details/${machineId}`;
            
            // Demo uchun alert ko'rsatamiz
            alert(`Mashina ID: ${machineId}\nMashina tafsilotlari sahifasiga o'tilmoqda...`);
            
            // Haqiqiy loyihada quyidagilardan birini ishlatishingiz mumkin:
            // 1. window.location.href = `/machines/${machineId}`;
            // 2. window.location.href = `/machine-details?id=${machineId}`;
            // 3. window.open(`/machines/${machineId}`, '_blank');
        }

        // Qidiruv funksiyasi
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.querySelector('input[type="text"]');
            const searchButton = document.querySelector('.btn-outline-secondary');
            
            searchButton.addEventListener('click', function() {
                const searchTerm = searchInput.value.toLowerCase();
                const machines = document.querySelectorAll('.machine-card');
                
                machines.forEach(machine => {
                    const title = machine.querySelector('.card-title').textContent.toLowerCase();
                    const description = machine.querySelector('.card-text:last-of-type').textContent.toLowerCase();
                    
                    if (title.includes(searchTerm) || description.includes(searchTerm)) {
                        machine.parentElement.style.display = 'block';
                    } else {
                        machine.parentElement.style.display = 'none';
                    }
                });
            });
            
            // Enter bosganda ham qidirish
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    searchButton.click();
                }
            });
        });
    </script>
</body>
</html>