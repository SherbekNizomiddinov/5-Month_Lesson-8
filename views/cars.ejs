<%- include('partials/header') %>
<h2>Mashinalar Ro'yxati</h2>
<div class="car-list">
  <% cars.forEach(car => { %>
    <div class="car-item">
      <h3><%= car.name %></h3>
      <p>Kategoriya: <%= car.category.name %></p>
      <p>Narx: <%= car.price %> so'm</p>
      <% if (user && user.role === 'admin') { %>
        <a href="/cars/edit/<%= car._id %>">O‘zgartirish</a>
        <a href="/cars/delete/<%= car._id %>">O‘chirish</a>
      <% } %>
    </div>
  <% }) %>
</div>
<% if (user && user.role === 'admin') { %>
  <form action="/cars" method="POST">
    <input type="text" name="name" placeholder="Mashina nomi" required>
    <input type="text" name="category" placeholder="Kategoriya ID" required>
    <input type="number" name="price" placeholder="Narx" required>
    <button type="submit">Qo‘shish</button>
  </form>
<% } %>
<%- include('partials/footer') %>